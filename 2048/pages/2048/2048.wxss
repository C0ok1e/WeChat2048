/* pages/2048/2048.wxss */
.img{
  margin-top: -75px;
  width: 80px;
  height: 80px;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: -5px;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.game {
  margin: 0 auto;
  margin-top: -30rpx;
  box-sizing: border-box;
}

.game-head {
  display: flex;
}

.game-start, .game-score {
  height: 70rpx;
  color: #fff;
  background-color: #ccc0b2;
  text-align: center;
  line-height: 70rpx;
  border: 10rpx solid #b8af9e;
  border-bottom: 0;
}

.game-start {
  width: 140rpx;
}

.game-score {
  width: 445rpx;
  border-left: 0;
}

.game-body {
  width: 610rpx;
  height: 610rpx;
  background-color: #b8af9e;
  padding: 10rpx 0 0 10rpx;
  box-sizing: border-box;
}

.game-row {
  margin-bottom: 10rpx;
  overflow: hidden;
}

.game-box {
  float: left;
  width: 140rpx;
  height: 140rpx;
  margin-right: 10rpx;
  text-align: center;
  line-height: 140rpx;
  font-size: 65rpx;
}

